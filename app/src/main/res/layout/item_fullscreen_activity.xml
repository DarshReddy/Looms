<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#e1e1e1"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <FrameLayout
        android:id="@+id/item_grid_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/add_to_bag"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/left_rounded"
            android:drawableStart="@drawable/ic_bag_black"
            android:drawablePadding="6dp"
            android:elevation="4dp"
            android:padding="6dp"
            android:shadowColor="#000000"
            android:text="@string/add_to_bag"/>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/wish_item"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/right_rounded"
            android:drawableEnd="@drawable/ic_heart"
            android:drawablePadding="6dp"
            android:elevation="4dp"
            android:padding="6dp"
            android:shadowColor="#000000"
            android:text="@string/add_to_wishlist" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>