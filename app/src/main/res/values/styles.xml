<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#616161</item>
        <item name="colorPrimaryDark">#f1f1f1</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:titleTextStyle">@style/MyTextTitle</item>
        <item name="android:fontFamily">@font/pacifico</item>
    </style>

    <style name="MyTextTitle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#616161</item>
        <item name="android:fontFamily">@font/pacifico</item>
    </style>

    <style name="AppTheme.NoActionBar"></style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:titleTextStyle">@style/MyTextTitle</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorButtonNormal">#616161</item>
        <item name="android:titleTextStyle">@style/MyTextTitle</item>
    </style>

    <style name="ThemeActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@null</item>
        <!-- Support library compatibility -->
        <item name="background">@null</item>
    </style>

</resources>
